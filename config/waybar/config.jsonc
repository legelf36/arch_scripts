// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 24, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "layer": "top",
    "output": "DP-3",
    "include": [ "~/.config/waybar/default-modules.json", ],
    "modules-left": [  "temperature", "custom/gpuinfo", "custom/media","hyprland/workspaces", "hyprland/submap" ],
    //    "modules-center": [ "hyprland/window" ],
    "modules-right": [ "pulseaudio","clock", "tray" ],
    // Modules configuration

  "custom/gpuinfo": {
    "format": "GPU: {}¬∞C Ôãâ",
    "exec": "nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits",
//    "format-alt": "GPU: {}¬∞C ",
//    "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits",
//    "exec-alt": "nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits",
    "interval": 1,
//    "format-icons": ["Û∞ù¶", "Û∞™û", "Û∞™ü", "Û∞™†", "Û∞™°", "Û∞™¢", "Û∞™£", "Û∞™§", "Û∞™•"],
    "tooltip": true
  },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format" : "‚èª ",
		"tooltip": false,
		/*"menu": "on-click",*/
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "shutdown",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		}
    }
}
